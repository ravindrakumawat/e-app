<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-md-9">
        <h3>Empolyees</h3>
      </div>
      <div class="col-md-3 float-right">
        <%= link_to 'Add Employee', new_business_employee_path, class: 'btn btn-primary mr-5' %>
       </div>
    </div>
  </div>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Designation</th>
          <th>Joining Date</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.designation %></td>
            <td><%= employee.joining_date %></td>
            <td><%= link_to 'Show', [@business, employee] %></td>
            <td><%= link_to 'Edit', edit_business_employee_path(@business, employee) %></td>
            <td><%= link_to 'Destroy', [@business, employee], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
